<?xml version="1.0" encoding="utf-8"?>


<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- my firt item with 4 corners radius(8dp)
     -->
    <item>
        <shape android:shape="rectangle">
            <solid
                android:color="@color/w30_blue"/>
            <corners android:radius="5dp"/>

        </shape>
    </item>

  <!--  To keep the top-LEFT corner UNROUNDED set both OPPOSITE offsets (bottom+right):-->
    <item
        android:top="10dp"
        android:right="10dp">
        <shape>
             <solid android:color="@color/w30_blue"/>
        </shape>
    </item>
    <!--  To keep the top-right corner UNROUNDED set both OPPOSITE offsets (bottom+left):-->
    <item
        android:top="10dp"
        android:left="10dp">
        <shape>
            <solid android:color="@color/w30_blue"/>
        </shape>
    </item>

</layer-list>